<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hebut.base.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hebut.base.entity.vo.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="account" property="account" />
        <result column="password" property="password" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, account, password,
    </sql>
    <select id="getAllUserInfo" resultType="com.hebut.base.entity.vo.User">
        select * from user
    </select>
    <select id="findByAccount" resultType="com.hebut.base.entity.vo.User">
        select * from user where account = #{account}
    </select>

</mapper>
